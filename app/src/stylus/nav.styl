.nav-holder
    margin 0
    .nav-header
        margin 0
        text-align center
        line-height 0
        height 4.9rem
        box-sizing border-box
        padding .5rem 0 0 0
        &::after
            height 0
            visibillity hidden
            overflow hidden
            width 100%
            content ''
            display inline-block
        .nav-item-holder
            display inline-block
            padding 1.05rem 0 1.05rem
            background #160000
            position relative
            margin-right -4px
            border .0625rem solid transparent
            .nav-item
                display block
                font-family "FuturaPTMedium"
                line-height 1.7
                text-decoration none
                padding 0 1.5625rem 0 1.5625rem
                height 1.75rem
                border .0625rem solid transparent
                border-right .0625rem solid #3d2417
                color #b28e5c
                text-transform uppercase
            &:last-child
                .nav-item
                    border .0625rem solid transparent
            &:hover
                background #640808
                border .0625rem solid #8e1210
                top .05rem
                padding 1.25rem 0 1.05rem
                .nav-item
                    color #ecd7b6
                    border .0625rem solid transparent
                    padding 0 1.5625rem 0 1.5625rem
            &.active
                top .05rem
                background #640808
                padding 1.25rem 0 1.05rem
                border .0625rem solid #8e1210
                .nav-item
                    color #ecd7b6
                    border .0625rem solid transparent
                    padding 0 1.5625rem 0 1.5625rem
